---
import Image from "../components/Image.astro";
---

<div id="gallery-section" class="mx-auto my-40 max-w-6xl px-6 md:px-0">
  <div>
    <div class="md:flex md:justify-between">
      <h2
        class="uppercase text-center mx-auto md:mx-0 md:text-5xl text-4xl font-light text-txt-dark"
      >
        our creations
      </h2>
      <div class="md:block hidden">
        <button
          class="uppercase w-full tracking-widest px-12 font-bold py-2 hover:bg-black hover:text-white border-2 font-alata border-black"
          >see all
        </button>
      </div>
    </div>

    <div class="mt-20 space-y-8 md:space-y-0 md:gap-8 md:grid md:grid-cols-4">
      <Image
        srcDesktop="../../public/images/desktop/image-deep-earth.jpg"
        srcMobile=".../../public/images/mobile/image-deep-earth.jpg"
        title="deep earth"
      />
      <Image
        srcDesktop="../../public/images/desktop/image-night-arcade.jpg"
        srcMobile="../../public/images/mobile/image-night-arcade.jpg"
        title="night arcade"
      />
      <Image
        srcDesktop="../../public/images/desktop/image-soccer-team.jpg"
        srcMobile="../../public/images/mobile/image-soccer-team.jpg"
        title="soccer team vr"
      />
      <Image
        srcDesktop="../../public/images/desktop/image-grid.jpg"
        srcMobile="../../public/images/mobile/image-grid.jpg"
        title="the grid"
      />
      <Image
        srcDesktop="../../public/images/desktop/image-from-above.jpg"
        srcMobile="../../public/images/mobile/image-from-above.jpg"
        title="from up above vr"
      />
      <Image
        srcDesktop="../../public/images/desktop/image-pocket-borealis.jpg"
        srcMobile="../../public/images/mobile/image-pocket-borealis.jpg"
        title="pocket borealis"
      />
      <Image
        srcDesktop="../../public/images/desktop/image-curiosity.jpg"
        srcMobile="../../public/images/mobile/image-curiosity.jpg"
        title="the curiosity"
      />
      <Image
        srcDesktop="../../public/images/desktop/image-fisheye.jpg"
        srcMobile="../../public/images/mobile/image-fisheye.jpg"
        title="make it fisheye"
      />
    </div>
    <div class="mt-10 md:hidden">
      <button
        class="uppercase w-full font-alata tracking-widest font-bold py-2 hover:bg-black hover:text-white text-lg border-2 border-black"
        >see all</button
      >
    </div>
  </div>
</div>
