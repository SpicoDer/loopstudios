---
import Image from "../components/Image.astro";

const imageSrc = [
  [
    "deep earth",
    "/images/desktop/image-deep-earth.jpg",
    "/images/mobile/image-deep-earth.jpg",
  ],
  [
    "night arcade",
    "/images/desktop/image-night-arcade.jpg",
    "/images/mobile/image-night-arcade.jpg",
  ],
  [
    "soccer team vr",
    "/images/desktop/image-soccer-team.jpg",
    "/images/mobile/image-soccer-team.jpg",
  ],
  [
    "the grid",
    "/images/desktop/image-grid.jpg",
    "/images/mobile/image-grid.jpg",
  ],
  [
    "from up above vr",
    "/images/desktop/image-from-above.jpg",
    "/images/mobile/image-from-above.jpg",
  ],
  [
    "pocket borealis",
    "/images/desktop/image-pocket-borealis.jpg",
    "/images/mobile/image-pocket-borealis.jpg",
  ],
  [
    "the curiosity",
    "/images/desktop/image-pocket-borealis.jpg",
    "/images/mobile/image-pocket-borealis.jpg",
  ],
  [
    "make it fisheye",
    "/images/desktop/image-fisheye.jpg",
    "/images/mobile/image-fisheye.jpg",
  ],
];
---

<div id="gallery-section" class="mx-auto my-40 max-w-6xl px-6 md:px-0">
  <div>
    <div class="md:flex md:justify-between">
      <h2
        class="uppercase text-center mx-auto md:mx-0 md:text-5xl text-4xl font-light text-txt-dark"
      >
        our creations
      </h2>
      <div class="md:block hidden">
        <button
          class="uppercase w-full tracking-widest px-12 font-bold py-2 hover:bg-black hover:text-white border-2 font-alata border-black"
          >see all
        </button>
      </div>
    </div>

    <div class="mt-20 space-y-8 md:space-y-0 md:gap-8 md:grid md:grid-cols-4">
      {
        imageSrc.map((img) => {
          return (
            <Image srcDesktop={img[1]} srcMobile={img[2]} title={img[0]} />
          );
        })
      }
    </div>

    <div class="mt-10 md:hidden">
      <button
        class="uppercase w-full font-alata tracking-widest font-bold py-2 hover:bg-black hover:text-white text-lg border-2 border-black"
        >see all</button
      >
    </div>
  </div>
</div>
