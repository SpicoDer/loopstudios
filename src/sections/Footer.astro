---
import Links from "../components/Links.astro";
---

<footer class="bg-black">
  <div
    class="bg-black mx-auto max-w-6xl py-12 md:px-4 md:flex md:justify-between md:items-center"
  >
    <div class="space-y-8 md:space-y-4">
      <img
        class="w-44 mx-auto md:mx-0"
        src="../../public/images/logo.svg"
        alt="Loopstudios logo"
      />

      <!-- Links -->
      <ul
        class="gap-6 flex md:flex-row text-lg flex-col items-center text-white"
      >
        <Links title="About" />
        <Links title="Careers" />
        <Links title="Events" />
        <Links title="Products" />
        <Links title="Support" />
      </ul>
    </div>

    <div class="space-y-8 md:space-y-4 mt-8 md:mt-0">
      <!-- Social Links -->
      <ul
        class="gap-4 font-bold text-lg flex justify-center items-center md:justify-start text-white"
      >
        <li class="cursor-pointer">
          <img
            src="../../public/images/icon-facebook.svg"
            alt="facebook link"
          />
        </li>
        <li class="cursor-pointer">
          <img src="../../public/images/icon-twitter.svg" alt="twitter link" />
        </li>
        <li class="cursor-pointer">
          <img
            src="../../public/images/icon-pinterest.svg"
            alt="pinterest link"
          />
        </li>

        <li class="cursor-pointer">
          <img
            src="../../public/images/icon-instagram.svg"
            alt="instagram link"
          />
        </li>
      </ul>
      <p class="text-slate-400 text-center">
        &copy {new Date().getFullYear()} Loopstudios. All Rights Reserved
      </p>
    </div>
  </div>
</footer>
