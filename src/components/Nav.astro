---
import Links from "./Links.astro";
import Menu from "../components/Menu.astro";
import MenuBtn from "./MenuBtn.astro";
---

<nav class="max-w-6xl px-6 pb-8 pt-12 md:px-12 mx-auto">
  <div class="flex justify-between">
    <!-- Logo -->
    <img src="/images/logo.svg" alt="loopstudios logo" />

    <!-- Links -->
    <ul class="hidden gap-6 font-bold text-lg items-center text-white md:flex">
      <Links title="About" />
      <Links title="Careers" />
      <Links title="Events" />
      <Links title="Products" />
      <Links title="Support" />
    </ul>
    <MenuBtn />
  </div>
  <Menu />
</nav>
